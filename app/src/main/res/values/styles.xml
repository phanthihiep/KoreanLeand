<resources>

     Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="StyleBigLargeBold">
        <item name="android:textColor">@color/colorWhile</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="StyleItemVocabulary">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">17sp</item>
    </style>
    
    <style name="StyleFontNavigate">
        <item name="android:textColor">@color/colorWhile</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="StyleFontTitleNavigate" parent="StyleFontNavigate">
        <item name="android:textColor">@color/colorWhile</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="StyleItemVocabularyMean" parent="StyleItemVocabulary">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    <style name="StyleTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/font_22</item>
        <item name="android:textColor">@color/colorBlack30</item>
    </style>
    
    <style name="StyleTitleChild" parent="StyleTitle">
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:textColor">#AE7A8C</item>
        
    </style>
    
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>
    
    <style name="StyleCardViewHome" >
        <item name="android:layout_marginBottom">@dimen/dimen_5</item>
        <item name="android:layout_marginTop">@dimen/dimen_5</item>
        <item name="android:layout_width">@dimen/dimen_150</item>
        <item name="android:layout_height">@dimen/dimen_100</item>
    </style>
    
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>
