<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_margin="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <androidx.cardview.widget.CardView
            android:id="@+id/icon"
            app:cardCornerRadius="@dimen/dimen_50"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50">
            
            <ImageView
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:src="@drawable/icon_item"
                android:contentDescription="@string/content_description" />
        </androidx.cardview.widget.CardView>
        
        <LinearLayout
            android:gravity="center"
            android:layout_toEndOf="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_15"
            android:paddingTop="@dimen/dimen_10"
            android:paddingEnd="@dimen/dimen_15"
            android:paddingBottom="@dimen/dimen_10"
            android:layout_toRightOf="@+id/icon">
            
            <TextView
                android:id="@+id/tvKorean"
                style="@style/StyleItemVocabulary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jgjh" />
            
            <TextView
                android:id="@+id/tvMean"
                style="@style/StyleItemVocabularyMean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jgjh" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/image_snow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_snow"
                android:contentDescription="@string/content_description" />
    
            <CheckBox
                android:layout_gravity="center"
                android:buttonTint="@color/colorAccent"
                android:layout_margin="@dimen/dimen_5"
                android:id="@+id/cb_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/colorPinkLight" />

</LinearLayout>